<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
    android:fillViewport="true"
    >

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/celular" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Aprenda sobre edição de imagens"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="05/09/2022"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Mauris vitae feugiat libero, vitae convallis mi. Donec at pretium urna, non auctor sem. Fusce in posuere massa. Nullam quis ultrices nulla. Aenean vehicula sem nec imperdiet porttitor. Duis eu dui pharetra, scelerisque enim a, sagittis elit. Curabitur in quam sapien. Mauris sed nisl cursus, cursus nibh ut, ultricies arcu. Nunc vel diam sit amet odio semper sodales in id sapien. Nam eget urna a purus tincidunt tristique auctor ut felis. Nam rutrum nulla ac massa gravida varius vulputate nec tortor.In eget enim a velit molestie ultrices at tristique ex. Fusce sollicitudin nisl at maximus hendrerit. Aenean suscipit in nunc non posuere. Etiam id finibus mauris, sed egestas ipsum. Nam sit amet lorem sagittis, mattis tortor ut, bibendum ipsum. Duis tincidunt mi ac mauris dignissim volutpat. Nullam dignissim nunc quis vulputate bibendum. Nam eget dapibus nisl. Nullam id ornare ante. Sed semper metus ut nulla laoreet, vel consequat ex bibendum. Vivamus sed mollis nulla, non hendrerit velit. Curabitur accumsan est nisi, vitae venenatis purus mollis non.iam vitae nibh fringilla elit tincidunt vestibulum. Vestibulum eros quam, semper et finibus vel, porta sit amet leo. Proin vehicula velit non ultricies convallis. Quisque auctor vulputate ipsum iaculis dictum.Nulla fringilla quis leo ut tincidunt. Sed accumsan bibendum vulputate. Pellentesque dignissim, ex elementum vulputate congue, diam urna dapibus augue, ac tempor lacus urna sit amet mi."
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="10dp"
        android:text="Proximo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="10dp"
        android:text="anterior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="Diogo Rodrigo"
        app:layout_constraintBaseline_toBaselineOf="@+id/button2"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>